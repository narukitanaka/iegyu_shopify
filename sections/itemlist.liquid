  {% if cart.attributes.pagination != blank %}
    {%- assign limit = cart.attributes.pagination %}
  {% else %}
    {% assign limit = 20 -%}
  {% endif %}
  {% paginate collection.products by limit %}
    <div class="p-merchandise-content">
      <div class="l-content__inner">
        <div class="p-order-content">
          <dl class="p-order">
            <dt class="p-order__ttl">並べ替え</dt>
            <dd>
              <ul class="p-order__list">
                <li class="p-order__item sort-by">
                  <a href="/" data-sort-by="best-selling">おすすめ順</a>
                </li>
                <li class="p-order__item sort-by">
                  <a href="/" data-sort-by="price-ascending">価格が安い順</a>
                </li>
                <li class="p-order__item sort-by">
                  <a href="/" data-sort-by="created-descending">新着順</a>
                </li>
              </ul>
            </dd>
          </dl>
          <!-- /.p-order -->
          <div class="p-select-wrapper">
            <select id="sort-by-select">
              <option value="best-selling">おすすめ順</option>
              <option value="price-ascending">価格が安い順</option>
              <option value="created-descending">新着順</option>
            </select>
          </div>
          <!-- /.p-select-wrapper -->
        </div>
        <!-- /.p-order-content -->
        <ul class="p-cards">
          {% for product in collection.products %}
            <li class="p-card">
              <a href="{{ product.url }}">
                <div class="p-card-content">
                  <div class="p-card__img-wrapper">
                    <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="">
                  </div>
                  <div class="p-card__body">
                    <p class="c-ttl">{{ product.title }}</p>
                    <p class="c-txt">{{ product.price | money }}</p>
                  </div>
                </div>
              </a>
            </li>
          {% endfor %}
          <!-- /.p-card -->
        </ul>
        <!-- /.p-cards -->

        {% if paginate.pages > 1 %}
          {% render "pagination", paginate: paginate %}
        {% endif %}

      </div>
      <!-- /.l-content__inner -->
    </div>
    <!-- /.p-merchandise-content -->
  {% endpaginate %}
