<script>
  document.addEventListener('DOMContentLoaded', function() {
    var sortByLinks = document.querySelectorAll('.sort-by a');

    sortByLinks.forEach(function(link) {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        var sortByValue = this.getAttribute('data-sort-by');
        var currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set('sort_by', sortByValue);
        window.location.href = currentUrl.toString();
      });
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var sortBySelect = document.getElementById('sort-by-select');

    sortBySelect.addEventListener('change', function() {
      var sortByValue = this.value;
      var currentUrl = new URL(window.location.href);
      currentUrl.searchParams.set('sort_by', sortByValue);
      window.location.href = currentUrl.toString();
    });
  });
</script>



